<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <Button Height="20" Width="100" FontSize="12" x:Name="Cli_Con" Click="Connect_Click">Connect</Button>
            <TextBox Height="20" x:Name="Username_Input">username</TextBox>
            <TextBox Height="20" x:Name="Password_Input">password</TextBox>
            <Button Height="20" Width="100" FontSize="12" x:Name="Cli_Log" Click="Login_Click">Login</Button>
            <TextBlock> Send to Server</TextBlock>
            <TextBox Height="20" x:Name="Cli_Mes"></TextBox>
            <Button Height="20" Width="100" FontSize="12" x:Name="Cli_Sen" Click="Cli_Sen_Click">Send</Button>
            <TextBox Height="100" TextWrapping="WrapWithOverflow" x:Name="sys_mes"></TextBox>
        </StackPanel>
    </Grid>
</Window>